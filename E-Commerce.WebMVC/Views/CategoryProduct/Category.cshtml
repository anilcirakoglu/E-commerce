@model List<CategoryProductModel>
@{
    Layout = "_Layout";
}@{
    if (Model != null )
    {
        <table class="table">
            <thead>
                <tr>
                    <td>ID </td>
                    <td>Category</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.ID
                        </td>
                        <td>@category.CategoryName</td>
                        <td><a asp-action="Remove" asp-controller="CategotyProduct"
                        asp-route-id="@category.ID" class="btn btn-danger ">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
        bulunamadı
        </div>
    }
}