@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ProductForCustomerModel>

@{
    Layout = "_Layout";
}
@{
    if (Model != null && Model.Count > 0)
    {
        <div>
            <table class="table" border="1">


                <tr>
                    @foreach (var item in Model.Take(3))
                    {

                        <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ID">
                                <img alt="resim" src="data:png;base64,@item.Image" />
                            </a><br />
                            <b>@item.ProductName</b>
                            @item.ProductInformation
                            <br />
                            Price :@item.ProductPrice
                            <a class=" btn btn-outline-success" asp-controller="Customer" asp-action="AddProductCart" asp-route-ProductID="@item.ID">Add Cart</a>
                        </td>

                    }


                </tr>
                <tr>
                    @foreach (var item in Model.Skip(3).Take(3))
                    {
                        <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ID">
                                <img alt="resim" src="data:png;base64,@item.Image" />
                            </a><br />
                            <b>@item.ProductName</b>
                            @item.ProductInformation

                            <p>Price &nbsp; &nbsp;</p>@item.ProductPrice
                            <a class=" btn btn-outline-success" asp-controller="Customer" asp-action="AddProductCart" asp-route-ProductID="@item.ID">Add Cart</a>
                        </td>

                    }


                </tr>
                <tr>
                    @foreach (var item in Model.Skip(6).Take(3))
                    {
                        <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ID">
                                <img alt="resim" src="data:png;base64,@item.Image" />
                            </a> <b>@item.ProductName</b>
                            @item.ProductInformation

                            <p>Price &nbsp; &nbsp;</p>@item.ProductPrice
                            <a class=" btn btn-outline-success" asp-controller="Customer" asp-action="AddProductCart" asp-route-ProductID="@item.ID">Add Cart</a>
                        </td>

                    }


                </tr>

            </table>
        </div>
    }
    else
    {
        <h1><p>Product is not Found</p></h1>
    }


}

@Html.PagedListPager((IPagedList)Model, page => Url.Action("CategoryIndex", "CategoryProduct", new { page }))