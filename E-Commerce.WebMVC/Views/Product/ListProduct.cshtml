@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ProductModel>
@{
    Layout = "_Layout";
}@{
    if (Model != null)
    {
      
        <table class="table">
            <thead>
                <tr>
                  
                    <td>Product Name</td>
                    <td>Information</td>
                    <td>ProductPrice</td>
                    <td>DiscountPercentage</td>
                    <td>Stock Quantity</td>
                    <td>IsProductActive</td>
                    <td>Categories</td>
                    <td>Seller Name</td>
                    <td>IsApprovedProduct</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductInformation</td>
                        <td>@product.ProductPrice</td>
                        <td>@product.DiscountPercentage</td>
                        <td>@product.ProductQuantity</td>
                        <td>@product.IsProductActive</td>
                        <td>@product.CategoryName</td>
                        <td>@product.SellerName</td>
                       <td>@product.IsApprovedProduct</td>
                        <td>
                            <a asp-action="ApproveProduct" asp-controller="Admin"
                               asp-route-id="@product.ID" class="btn btn-outline-success ">Approve</a>
                        </td>
                        <td>
                            <a asp-action="RejectProduct" asp-controller="Admin"
                               asp-route-id="@product.ID" class="btn btn-danger ">Reject</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            bulunamadı
        </div>
    }
}
@Html.PagedListPager((IPagedList)Model, page => Url.Action("ListProduct", "Product", new { page }))